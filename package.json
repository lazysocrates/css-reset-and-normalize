{
  "name": "css-reset-and-normalize",
  "version": "1.0.1",
  "description": "A combination of css reset and normalize (available in CSS, SCSS, Stylus and LESS)",
  "author": "Simon Lepel <simbo@simbo.de> (http://simbo.de/)",
  "license": "MIT",
  "keywords": [
    "reset",
    "normalize",
    "reboot",
    "css",
    "scss",
    "stylus",
    "less"
  ],
  "homepage": "https://github.com/simbo/css-reset-and-normalize#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simbo/css-reset-and-normalize.git"
  },
  "bugs": {
    "url": "https://github.com/simbo/css-reset-and-normalize/issues"
  },
  "scripts": {
    "build:css": "mkdir -p css && node-sass --output-style expanded ./scss/reset-and-normalize.scss > ./css/reset-and-normalize.css",
    "build:min": "cleancss -O 0 -o ./css/reset-and-normalize.min.css ./css/reset-and-normalize.css",
    "build:stylus": "mkdir -p stylus && stylus --css ./css/reset-and-normalize.css ./stylus/reset-and-normalize.styl",
    "build:less": "mkdir -p less && cp ./scss/reset-and-normalize.scss ./less/reset-and-normalize.less",
    "build": "yarn run clean && yarn run build:css && yarn run build:min && yarn run build:stylus && yarn run build:less",
    "clean": "rm -rf css stylus less",
    "test": "echo \"No tests specified. Skipping...\" && exit 0"
  },
  "main": "css/reset-and-normalize.min.css",
  "files": [
    "css/",
    "less/",
    "scss",
    "stylus/",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "clean-css-cli": "^4.1.11",
    "node-sass": "^4.9.0",
    "stylus": "^0.54.5"
  }
}
